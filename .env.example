# ========================================
# MICROBLOG PLATFORM - ENVIRONMENT VARIABLES
# ========================================

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ========================================
# POSTGRES DATABASES
# ========================================
# Auth Database
POSTGRES_AUTH_USER=auth_user
POSTGRES_AUTH_PASSWORD=your-secure-auth-password

# Users Database
POSTGRES_USERS_USER=users_user
POSTGRES_USERS_PASSWORD=your-secure-users-password

# Posts Database
POSTGRES_POSTS_USER=posts_user
POSTGRES_POSTS_PASSWORD=your-secure-posts-password

# ========================================
# MONGODB DATABASES
# ========================================
# Comments Database
MONGO_COMMENTS_USER=comments_user
MONGO_COMMENTS_PASSWORD=your-secure-comments-password

# Notifications Database
MONGO_NOTIFICATIONS_USER=notifications_user
MONGO_NOTIFICATIONS_PASSWORD=your-secure-notifications-password

# ========================================
# ELASTICSEARCH
# ========================================
ELASTICSEARCH_PASSWORD=your-secure-elasticsearch-password

# ========================================
# INFLUXDB
# ========================================
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=your-secure-influxdb-password
INFLUXDB_ORG=microblog
INFLUXDB_BUCKET=analytics
INFLUXDB_TOKEN=your-influxdb-token-here

# ========================================
# RABBITMQ
# ========================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-secure-rabbitmq-password

# ========================================
# REDIS
# ========================================
REDIS_PASSWORD=your-secure-redis-password

# ========================================
# GRAFANA
# ========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# ========================================
# NGINX (Optional - for production)
# ========================================
# NGINX_SSL_CERT_PATH=/path/to/ssl/certificate.crt
# NGINX_SSL_KEY_PATH=/path/to/ssl/private.key

# ========================================
# SERVICE PORTS (Optional - defaults are used if not set)
# ========================================
# GATEWAY_PORT=3000
# AUTH_SERVICE_PORT=3001
# AUTH_HTTP_PORT=3002
# USERS_SERVICE_PORT=3003
# POSTS_SERVICE_PORT=3004
# COMMENTS_SERVICE_PORT=3005
# NOTIFICATIONS_SERVICE_PORT=3006
# SEARCH_SERVICE_PORT=3007
# ANALYTICS_SERVICE_PORT=3008

# ========================================
# MONITORING PORTS (Optional - defaults are used if not set)
# ========================================
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3010
# NODE_EXPORTER_PORT=9100

